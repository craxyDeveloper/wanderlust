<% layout('/layouts/boilerplate.ejs')-%>
<style>
  .filters{
    display: flex;
    flex: wrap;
    align-items: center;
  }
  .filter{
    text-align: center;
    margin: auto;
    padding: 1rem;
    opacity: 0.7;
    
    
  }
  .filter:hover{
    opacity: 1;
  }
  .tax-info{
    display: none;
  }
  .tax-switch{
    border: 2px solid rgb(179, 177, 175);
    border-radius: 1rem;
    margin-left: 8rem;

    
   
  }
  .tax-form{
    height: 3.5rem;
    width: 15rem;
    display: flex;
    justify-content: center;
    align-items: center;
    
  }



</style>
<body>
    
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="get" action="/listings/new">
        <button>Create new listing</button>
    </form> -->
    <div class=" row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <div class="filters">
        <div class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Trending</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-snowflake"></i>
          <p>Arctic</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-person-swimming"></i>
          <p>lake</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-bed"></i>
          <p>Room</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-tree"></i>
          <p>Tropical</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-house"></i>
          <p>TinyHome</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-arrow-up-from-ground-water"></i>
          <p>NationalPark</p>
        </div>
        <div class="filter">
          <i class="fa-solid fa-mountain-city"></i>
          <p>IconicCities</p>
        </div>
        <div class="tax-switch  ">
          <div class="form-check-reverse form-switch tax-form  ">
            <label class="form-check-label" for="flexSwitchCheckChecked">Display Total after taxes</label>
            <input class="form-check-input form-control " type="checkbox" role="switch" id="flexSwitchCheckChecked"/>
    
          </div>
        </div>
        

        
        
      </div>
        
        
    </div>

      

    
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      
        <% for(let listing of allListings){%>
            <a href="/listings/<%=listing._id%>" class="listing-links">
                <div class="card col listing-card" >
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 18rem;">
                    <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div>
                    <div class="card-body">
                      <h5 class="card-title"><%=listing.title%></h5>
                      <!-- <p class="card-description"><%=listing.description%></p> -->
                      <p class="card-price"><b> &#8377;<%=listing.price%>/night</b><i class="tax-info">&nbsp;&nbsp;+18% GST</i></p>
                      <!-- <p class="card-location"><%=listing.location%></p> -->

                      
                    </div>
                  </div>
            </a>
              <%  }%>
    </div>
   <script>
    let taxSwitch=document.getElementById("flexSwitchCheckChecked");
    taxSwitch.addEventListener('click',()=>{
      let taxInfo=document.getElementsByClassName('tax-info');
      console.log(taxInfo);
      for(info of taxInfo){
        if(info.style.display!='inline'){
          info.style.display='inline';
        }
        else{
          info.style.display='none';
        }
        
      }
      
    })
   </script>

</body>
