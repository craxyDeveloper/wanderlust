<% layout('/layouts/boilerplate.ejs')-%>
<script>
  const placeName=JSON.stringify("<%=listing.location%>");
</script>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h3><%=listing.title%></h3>
    <div class="card" >
        <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <i><%=listing.Owner%></i><br/>
            <%=listing.description%><br/>
            <b> &#8377;<%=listing.price%></b><br/>
            <%=listing.location%><br/>
            <%=listing.country%>

          </p>
        </div>
      </div>
    </div>
    
    <div class="col-6 offset-2">
      <div class="row justify-content-around mt-3 mb-3">
        <div class="col-5">
         <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit">Edit your listing</a>
        </div>
         
         <div class="col-5">
             <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                 <button class="btn btn-dark delete">Delete</button>
             </form>
         </div>
        
     </div>
    
    </div>
</div>

 
    
    <div class="row">
      <div class="col-8 offset-2">
        <hr>
    
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mt-2 mb-3">
            <label for="rating"  class="form-label">Rating</label>
            <!-- <input type="range" min="0" max="5" id="rating" name="review[rating]"  class="form-range" > -->
            <fieldset class="starability-slot">
              <!-- <legend>First rating:</legend> -->
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mt-2 mb-3">
            <label for="comment"  class="form-label">Comments</label>
            <textarea name="review[comment]" cols="30" rows="5"  class="form-control" required ></textarea>
            <div class="invalid-feedback">
              Please enter a comment.
            </div>
          </div>
          
          <button class="btn btn-outline-dark mb-3">Submit</button>
        </form>
        
        <hr>
       
        <% if(listing.reviews.length>0){%>
        <div class="row">
          <h5>All Reviews</h5>
        <%for(review of listing.reviews){%>
          <div class="card col-5 ms-2 mb-3" >
            <div class="card-body ">
              <h5 class="card-title">@<%=review.author.username%></h5>
              <p class="card-text"><%=review.comment%></p>
              <p class="starability-result" data-rating="<%=review.rating%>">
                Rated: 3 stars
              </p>
            </div>
            <form class="mb-3" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-dark ">Delete</button>
            </form>
          </div>
       <% }%>
       <%}%>

        
        
      </div>
      </div>
      <div  class="col-8 offset-2 mt-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map" style="height: 500px; width: 100%;">
  
        </div>
      </div>
     </div>
     
     <script src="../css/js/map.js"></script>

     
</body>
